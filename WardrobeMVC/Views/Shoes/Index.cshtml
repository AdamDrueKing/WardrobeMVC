        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeOccasion.ShoeOccassionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoeSeason.ShoeSeasonName)
        </th>
