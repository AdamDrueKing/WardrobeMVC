@model IEnumerable<WardrobeMVC.Models.Sho>

@{
    ViewBag.Title = "Index";
}

@{
    int numberOfSlides = Model.Count();
}
<h2 class="navbar navbar-default" style="font-family: 'Coda Caption', sans-serif;">Index</h2>
<span><a href="@Url.Action("Index","Shoes")" class="btn btn-primary btn-lg wardBTN" style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">All Shoes</a></span>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @{
            for (int i = 1; i <= numberOfSlides; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i;"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="carouselIMG" src="~/Content/MyPhoto/WhiteSneakers.jpg" />
            <a href="@Url.Action("Create","Shoes")" class="btn btn-primary btn-lg carouselBTN">Add Shoes</a>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <img class="carouselIMG" src="@Html.DisplayFor(modelItem => item.ShoePhoto)" alt="">
                <a href="@Url.Action("Create","Shoes")" class="btn btn-primary btn-lg carouselBTN">Add Shoes</a>
                <span><a href="@Url.Action("Edit", "Shoes", new { id=item.ShoesID })" class="btn btn-primary btn-lg inCarouselBTN">Edit</a></span>
                <span><a href="@Url.Action("Details", "Shoes", new { id=item.ShoesID })" class="btn btn-primary btn-lg inCarouselBTN">View</a></span>
                <span><a href="@Url.Action("Delete", "Shoes", new { id=item.ShoesID })" class="btn btn-primary btn-lg inCarouselBTN">Delete</a></span>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>







<h2 style="font-family: 'Coda Caption', sans-serif;">Index</h2>

<p style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
