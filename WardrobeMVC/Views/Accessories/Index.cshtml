@model IEnumerable<WardrobeMVC.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-family: 'Coda Caption', sans-serif;">Accessories</h2>

<p style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryColor.AccessoryColorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryOccasion.AccessoryOccasionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessorySeason.AccessorySeasonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryType.AccessoryTypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryColor.AccessoryColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryOccasion.AccessoryOccasionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessorySeason.AccessorySeasonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryType.AccessoryTypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AccessoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AccessoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AccessoryID })
        </td>
    </tr>
}

</table>
