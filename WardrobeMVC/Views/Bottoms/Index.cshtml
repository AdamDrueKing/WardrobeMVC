@model IEnumerable<WardrobeMVC.Models.Bottom>

@{
    ViewBag.Title = "Index";
}

@{
    int numberOfSlides = Model.Count();
}
<h2 class="wardrobeHeader" style="font-family: 'Coda Caption', sans-serif;">Index</h2>
<span><a href="@Url.Action("Index","Bottoms")" class="btn btn-primary btn-lg wardBTN" style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">All Bottoms</a></span>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @{
            for (int i = 1; i <= numberOfSlides; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i;"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="carouselIMG" src="~/Content/MyPhoto/Denim2.jpg" />
            <a href="@Url.Action("Create","Bottoms")" class="btn btn-primary btn-lg carouselBTN">Add Bottom</a>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <img class="carouselIMG" src="@Html.DisplayFor(modelItem => item.BottomPhoto)" alt="">
                <a href="@Url.Action("Create","Bottoms")" class="btn btn-primary btn-lg carouselBTN">Add Bottom</a>
                <span><a href="@Url.Action("Edit", "Bottoms", new { id=item.BottomID })" class="btn btn-primary btn-lg inCarouselBTN">Edit</a></span>
                <span><a href="@Url.Action("Details", "Bottoms", new { id=item.BottomID })" class="btn btn-primary btn-lg inCarouselBTN">View</a></span>
                <span><a href="@Url.Action("Delete", "Bottoms", new { id=item.BottomID })" class="btn btn-primary btn-lg inCarouselBTN">Delete</a></span>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>





<h2 style="font-family: 'Coda Caption', sans-serif;">Index</h2>

<p style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BottomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomsColor.BottomsColorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomsOccasion.BottomsOccasionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomsSeason.BottomsSeasonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomsType.BottomsTypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BottomName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomsColor.BottomsColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomsOccasion.BottomsOccasionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomsSeason.BottomsSeasonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomsType.BottomsTypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BottomID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BottomID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BottomID })
        </td>
    </tr>
}

</table>
