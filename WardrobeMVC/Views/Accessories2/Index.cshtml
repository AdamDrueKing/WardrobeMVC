@model IEnumerable<WardrobeMVC.Models.Accessories2>

@{
    ViewBag.Title = "Index";
}

@{
    int numberOfSlides = Model.Count();
}
<h2 class="navbar navbar-default" style="font-family: 'Coda Caption', sans-serif;">Index</h2>
<span><a href="@Url.Action("Index","Accessories2")" class="btn btn-primary btn-lg wardBTN" style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">All Accessories</a></span>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @{
            for (int i = 1; i <= numberOfSlides; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i;"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="carouselIMG" src="~/Content/MyPhoto/rsz_ashscarf.jpg" /> 
            <a href="@Url.Action("Create","Accessories2")" class="btn btn-primary btn-lg carouselBTN">Add More Accessories</a>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <img class="carouselIMG" src="@Html.DisplayFor(modelItem => item.Accessory2Photo)" alt="">
                <a href="@Url.Action("Create","Accessories2")" class="btn btn-primary btn-lg carouselBTN">Add More Accessories</a>
                <span><a href="@Url.Action("Edit", "Accessories2", new { id=item.Accessory2ID })" class="btn btn-primary btn-lg inCarouselBTN">Edit</a></span>
                <span><a href="@Url.Action("Details", "Accessories2", new { id=item.Accessory2ID })" class="btn btn-primary btn-lg inCarouselBTN">View</a></span>
                <span><a href="@Url.Action("Delete", "Accessories2", new { id=item.Accessory2ID })" class="btn btn-primary btn-lg inCarouselBTN">Delete</a></span>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>






