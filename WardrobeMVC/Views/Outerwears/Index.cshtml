@model IEnumerable<WardrobeMVC.Models.Outerwear>

@{
    ViewBag.Title = "Index";
}

@{
    int numberOfSlides = Model.Count();
}
<h2 class="wardrobeHeader" style="font-family: 'Coda Caption', sans-serif;">Index</h2>
<span><a href="@Url.Action("Index","SecondLayerTops")" class="btn btn-primary btn-lg wardBTN" style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">All Outerwear Items</a></span>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @{
            for (int i = 1; i <= numberOfSlides; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i;"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="carouselIMG" src="~/Content/MyPhoto/HoodedJacket.jpg" />
            <a href="@Url.Action("Create","Outerwears")" class="btn btn-primary btn-lg carouselBTN">Add Outerwear Item</a>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <img class="carouselIMG" src="@Html.DisplayFor(modelItem => item.OuterwearPhoto)" alt="">
                <a href="@Url.Action("Create","Outerwears")" class="btn btn-primary btn-lg carouselBTN">Add Outerwear Item</a>
                <span><a href="@Url.Action("Edit", "Outerwears", new { id=item.OuterwearID })" class="btn btn-primary btn-lg inCarouselBTN">Edit</a></span>
                <span><a href="@Url.Action("Details", "Outerwears", new { id=item.OuterwearID })" class="btn btn-primary btn-lg inCarouselBTN">View</a></span>
                <span><a href="@Url.Action("Delete", "Outerwears", new { id=item.OuterwearID })" class="btn btn-primary btn-lg inCarouselBTN">Delete</a></span>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




<h2 style="font-family: 'Coda Caption', sans-serif;">Index</h2>

<p style="font-family: 'Saira Condensed', sans-serif; font-size:20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OuterwearName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OuterwearPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OuterwearColor.OuterwearColorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OuterwearOccassion.OuterwearOccassionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OuterwearSeason.OuterwearSeasonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OuterwearType.OuterwearTypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OuterwearName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OuterwearPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OuterwearColor.OuterwearColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OuterwearOccassion.OuterwearOccassionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OuterwearSeason.OuterwearSeasonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OuterwearType.OuterwearTypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OuterwearID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OuterwearID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OuterwearID })
        </td>
    </tr>
}

</table>
