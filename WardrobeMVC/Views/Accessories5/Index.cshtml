@model IEnumerable<WardrobeMVC.Models.Accessories5>

@{
    ViewBag.Title = "Index";
}

@{
    int numberOfSlides = Model.Count();
}
<h2 class="wardrobeHeader" style="font-family: 'Coda Caption', sans-serif;">Index</h2>
<span><a href="@Url.Action("Index","SecondLayerTops")" class="btn btn-primary btn-lg wardBTN" style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">All Second Layer Items</a></span>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @{
            for (int i = 1; i <= numberOfSlides; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i;"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="carouselIMG" src="~/Content/MyPhoto/Cardigan.jpg" />
            <a href="@Url.Action("Create","Accessories5")" class="btn btn-primary btn-lg carouselBTN">Add Still Another Accessory</a>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <img class="carouselIMG" src="@Html.DisplayFor(modelItem => item.Accessory5Photo)" alt="">
                <a href="@Url.Action("Create","Accessories5")" class="btn btn-primary btn-lg carouselBTN">Add Still Another Accessory</a>
                <span><a href="@Url.Action("Edit", "Accessories5", new { id=item.Accessory5ID })" class="btn btn-primary btn-lg inCarouselBTN">Edit</a></span>
                <span><a href="@Url.Action("Details", "Accessories5", new { id=item.Accessory5ID })" class="btn btn-primary btn-lg inCarouselBTN">View</a></span>
                <span><a href="@Url.Action("Delete", "Accessories5", new { id=item.Accessory5ID })" class="btn btn-primary btn-lg inCarouselBTN">Delete</a></span>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>





<h2 style="font-family: 'Coda Caption', sans-serif;">Index</h2>

<p style="font-family: 'Saira Condensed', sans-serif;font-size:20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Accessory5Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accessory5Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accessory5Colors.Accessory5ColorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accessory5Occassions.Accessory5OccassionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accessory5Seasons.Accessory5SeasonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accessory5Types.Accessory5TypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory5Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory5Photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory5Colors.Accessory5ColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory5Occassions.Accessory5OccassionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory5Seasons.Accessory5SeasonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory5Types.Accessory5TypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Accessory5ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Accessory5ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Accessory5ID })
        </td>
    </tr>
}

</table>
